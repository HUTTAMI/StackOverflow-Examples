@using PagedList.Mvc
@model MvcApplication.Models.Home.IndexVM
@{
    ViewBag.Title = "Index";
}
@section Pager
{
    @Html.PagedListPager(Model.Projects, page => Url.Action("Index", "Home", new { page }), new PagedListRenderOptions
    {
        ContainerDivClasses = new String[0],
        UlElementClasses = new[] { "nav", "navbar-nav", "navbar-right" },
        DisplayLinkToFirstPage = PagedListDisplayMode.Never,
        DisplayLinkToLastPage = PagedListDisplayMode.Never,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Never,
        DisplayLinkToNextPage = PagedListDisplayMode.Never
    })
}
<div class="container">
    <div class="row-fluid">
        <div class="span12">&nbsp;</div>
    </div>
    <div class="clear"></div>
    <div class="row-fluid">
        @Html.DisplayFor(x => x.Projects)
    </div>
</div>
