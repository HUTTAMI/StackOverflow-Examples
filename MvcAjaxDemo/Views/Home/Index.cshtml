@{
    ViewBag.Title = "Simple AJAX Demo";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-3 text-right">
        @using (Ajax.BeginForm("Ajax", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "update-me" }))
        {
            <button type="submit" class="btn btn-default">
                <i class="glyphicon glyphicon-refresh"></i>
                Click Me!
            </button>
        }
    </div>
    <div class="col-sm-9">
        <div class="well" id="update-me">Click the button to see some AJAX content.</div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}